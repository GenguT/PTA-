#include<stdio.h>
int findmax(int a);
int findmin(int a);
int main()
{
	int n,a,i=1;
	int max,min;
	scanf("%d",&n);
	a=n;
	do{
		max=findmax(a);
		min=findmin(a);
		a=max-min;
		printf("%d: %d - %d = %d\n",i,max,min,a);
		i++;
	}while(a!=495);
	
}

int findmax(int a)
{
	int num[3],result,i;
	for(i=0;i<3;i++){
		num[i]=a%10;
		a=a/10;
	}
	 for (int i = 0; i < 2; i++) {  //冒泡法
        for (int k = 0; k < 2 - i; k++) {
            int temp;
            if (num[k] < num[k + 1]) {
                temp = num[k];
                num[k] = num[k + 1];
                num[k + 1] = temp;
            }
        }
    }
    result = num[0]*100 + num[1]*10 + num[2]*1;
    return result;

}

int findmin(int a)
{
	int num[3],result,i;
	for(i=0;i<3;i++){
		num[i]=a%10;
		a=a/10;
	}
	 for (int i = 0; i < 2; i++) {  //冒泡法
        for (int k = 0; k < 2 - i; k++) {
            int temp;
            if (num[k] < num[k + 1]) {
                temp = num[k];
                num[k] = num[k + 1];
                num[k + 1] = temp;
            }
        }
    }
    result = num[2]*100 + num[1]*10 + num[0]*1;
    return result;

}
